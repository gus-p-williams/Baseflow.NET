<Window x:Class="Baseflow.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="Baseflow.NET" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F0F0F0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Input Data" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button Content="Load CSV" Click="LoadCsv_Click" Padding="5" Margin="0,0,0,5"/>
                    <TextBlock x:Name="FilePathText" Text="No file loaded" TextTrimming="CharacterEllipsis" Foreground="Gray" Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="Methods" FontWeight="Bold" Margin="0,0,0,5"/>
                    <CheckBox x:Name="ChkMethod_UKIH" Content="UKIH" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_LocalMin" Content="Local Minimum" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Fixed" Content="Fixed Interval" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Slide" Content="Sliding Interval" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_LH" Content="Lyne-Hollick" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Chapman" Content="Chapman" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_CM" Content="CM" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Boughton" Content="Boughton" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Furey" Content="Furey" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Eckhardt" Content="Eckhardt" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_EWMA" Content="EWMA" Margin="0,2"/>
                    <CheckBox x:Name="ChkMethod_Willems" Content="Willems" Margin="0,2"/>
                </StackPanel>

                <StackPanel Grid.Row="2">
                     <Button Content="Run Analysis" Click="Run_Click" Padding="5" Margin="0,10,0,5" FontWeight="Bold"/>
                     <Button Content="Export Results" Click="Export_Click" Padding="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1" Margin="10">
            <sp:WpfPlot x:Name="WpfPlot1" />
        </Grid>

    </Grid>
</Window>
